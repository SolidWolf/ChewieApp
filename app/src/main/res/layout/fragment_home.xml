<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_background"
    tools:context=".HomeActivity">

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:clipToPadding="false"
        android:padding="10dp"
        android:layout_centerInParent="true">

        <LinearLayout
            android:id="@+id/twitch_button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:elevation="5dp"
            android:outlineSpotShadowColor="@color/white"
            android:background="@drawable/twitch_button_rounded_corners">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="43dp"
                android:background="@drawable/white_twitch_logo"/>
            <ImageView
                android:layout_width="70dp"
                android:layout_height="20dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/white_twitch_word"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/youtube_button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:elevation="5dp"
            android:outlineSpotShadowColor="@color/white"
            android:background="@drawable/youtube_button_round_corners">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:background="@drawable/youtube_logo_and_word"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/spotify_button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:elevation="5dp"
            android:outlineSpotShadowColor="@color/white"
            android:background="@drawable/spotify_rounded_corners">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:layout_marginStart="5dp"
                android:background="@drawable/spotify_logo"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/patreon_button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:elevation="5dp"
            android:outlineSpotShadowColor="@color/white"
            android:background="@drawable/patreon_button_rounded_corners">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_marginStart="5dp"
                android:background="@drawable/patreon_logo"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/discord_button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:elevation="5dp"
            android:outlineSpotShadowColor="@color/white"
            android:background="@drawable/discord_button_rounded_corners">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:layout_marginStart="5dp"
                android:background="@drawable/discord_logo"/>
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>